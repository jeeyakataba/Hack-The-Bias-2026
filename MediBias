    <script>
        // Section Navigation Logic
        function showSection(Id) {
            document.querySelectorAll('selection').forEach(s => s.classList.remove('active'));
            document.getElementById(Id).classList.add('active');
        }

        // Stats Logic
        const statsData = [
            { topic: "Heart Disease", women: "34%", race: "Moderate", hormone: "Rarely" },
            { topic: "Ambien", women: "40%", race: "Low", hormone: "No" },
            { topic: "ADHD", women: "21%", race: "Low", hormone: "No" }
        ];

        function renderStats(data) {
            const body = document.getElementById("statsTable");   //Target
            body.innerHTML = data.map(i => `
                <tr>
                    <td>${i.topic}</td>
                    <td>${i.women}</td>
                    <td>${i.race}</td>
                    <td>${i.hormone}</td>
                </tr>
            `).join('');
        }

        //Grader Logic
        function calculateInclusivityGrade() {
            let score = 0;
            const w = parseInt(document.getElementById('womenCount').value) || 0;
            const m = parseInt(document.getElementById('menCount').value) || 0;
            
            if (w + m > 0) score += Math.min(40, (w / m) * 40);
            if (document.getElementById('g1').checked) score += 20;
            if (document.getElementById('g2').checked) score += 20;
            if (document.getElementById('g3').checked) score += 20;

            let grade = score > 95 ? 'A+' : score > 90 ? 'A' : score > 85 ? 'A-' : score > 80 ? 'B+' : score > 75 ? 'B' : score > 70 ? 'B-' : score > 65 ? 'C+' : score > 60 ? 'C' : score > 55 ? 'C-' : score > 50 ? 'D+' : score > 45 ? 'D' : score > 40 ? 'D-' : 'F';
            document.getElementById('gradeOutput').innerHTML = `<div class="result-box"><h3>Grade: ${grade}</h3><p>Inclusivity Score: ${Math.round(score)}/100</p></div>`;
        }

        // DX Logic
        function generateDxQuestions() {
            document.getElementById('dxQuestions').style.display = 'block';
        }

        // Initial Load
        renderStats(statsData);
    </script>
</body>

